{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {},
        "allowJs": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
